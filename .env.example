# Application
APP_NAME=Aura
ENVIRONMENT=development

# Database
DATABASE_URL=postgresql://aura_user:aura_password@postgres:5432/aura_db
POSTGRES_USER=aura_user
POSTGRES_PASSWORD=aura_password
POSTGRES_DB=aura_db

# Backend API
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
# Add your network IP (e.g., http://192.168.x.x:3000) if accessing from other devices
# Add your hostname if using one (e.g., http://docker-1:3000)
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Frontend
# Leave empty for development - will auto-detect based on hostname (localhost, IP, or domain)
# For production, set to your actual domain: https://api.yourdomain.com/api
VITE_API_URL=
VITE_WS_URL=

# AI Service
AI_SERVICE_HOST=0.0.0.0
AI_SERVICE_PORT=8001
AI_SERVICE_URL=http://ai-service:8001

# Authentication
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# AI API Keys (provide at least one)
# Primary: Google Gemini API (recommended)
GOOGLE_API_KEY=your-google-gemini-api-key

# Optional: Alternative AI providers
OPENAI_API_KEY=sk-your-openai-api-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key

# AI Model Configuration
DEFAULT_LLM_PROVIDER=gemini  # Options: gemini, openai, anthropic

# Provider-specific models
GEMINI_MODEL=gemini-2.5-flash  # Options: gemini-2.5-flash, gemini-2.0-flash-exp, gemini-1.5-pro, gemini-1.5-flash
OPENAI_MODEL=gpt-4-turbo-preview
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# Media Processing
UPLOAD_DIR=/app/uploads
MAX_UPLOAD_SIZE_MB=100
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf,docx,txt,mp3,wav,m4a,mp4,webm

# Audio Transcription
WHISPER_MODEL=base  # Options: tiny, base, small, medium, large
AUDIO_SAMPLE_RATE=16000

# OCR Configuration
TESSERACT_LANG=eng
OCR_DPI=300

# Redis (for task queue - optional)
REDIS_URL=redis://redis:6379/0

# Email (optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@aura-pkm.com

# Logging
LOG_LEVEL=INFO

# Feature Flags
ENABLE_AUDIO_PROCESSING=true
ENABLE_VIDEO_PROCESSING=true
ENABLE_OCR=true
ENABLE_WEB_SCRAPING=true
